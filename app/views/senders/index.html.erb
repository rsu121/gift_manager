<div class="page-header">
  <h1>
    Senders
    <a href="/senders/new" class="btn btn-lg btn-success">New Sender</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Person</th>
        <th>Received gift</th>
        <th>Actions</th>
      </tr>

      <% @senders.each do |sender| %>
      <tr>
        <td><%= sender.person_id %></td>
        <td><%= sender.received_gift_id %></td>
        <td>
          <a href="/senders/<%= sender.id %>" class="btn btn-primary">Show</a>
          <a href="/senders/<%= sender.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_sender/<%= sender.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
