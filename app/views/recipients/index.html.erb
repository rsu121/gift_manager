<div class="page-header">
  <h1>
    Recipients
    <a href="/recipients/new" class="btn btn-lg btn-success">New Recipient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Person</th>
        <th>Sent gift</th>
        <th>Actions</th>
      </tr>

      <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.person_id %></td>
        <td><%= recipient.sent_gift_id %></td>
        <td>
          <a href="/recipients/<%= recipient.id %>" class="btn btn-primary">Show</a>
          <a href="/recipients/<%= recipient.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipient/<%= recipient.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
