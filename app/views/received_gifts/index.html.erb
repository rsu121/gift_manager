<div class="page-header">
  <h1>
    Received gifts
    <a href="/received_gifts/new" class="btn btn-lg btn-success">New Received gift</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover sortable">
      <tr>
        <th>Date</th>
        <th>Content</th>
        <th>Received from</th>
        <th>Received as</th>
        <th>Actions</th>
      </tr>

      <% @received_gifts.each do |received_gift| %>
      <tr>
        <td><%= received_gift.date.strftime('%Y-%m-%d') %></td>
        <td><%= received_gift.content %></td>
        <td><% received_gift.persons.each do |person| %>
          <a href="/people/<%= person.id %>">
            <%= person.name %>
          </a>
          <% end %>
        </td>
        <td><%= received_gift.purpose %></td>
        <td>
          <a href="/received_gifts/<%= received_gift.id %>" class="btn btn-primary">Show</a>
          <a href="/received_gifts/<%= received_gift.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_received_gift/<%= received_gift.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
