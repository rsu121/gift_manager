<div class="page-header">
  <h3>Received Gift #<%= @received_gift.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Date</dt>
      <dd><%= @received_gift.date %></dd>

      <dt>Received from</dt>
      <dd>
        <% @received_gift.persons.each do |person| %>
        <%= person.name %>
        <% end %>
      </dd>

      <dt>Received as</dt>
      <dd><%= @received_gift.purpose %></dd>

      <dt>Content</dt>
      <dd><%= @received_gift.content %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @received_gift.image_url %>" width="300"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/received_gifts" class="btn btn-primary">
        Back
      </a>
      <a href="/received_gifts/<%= @received_gift.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_received_gift/<%= @received_gift.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
