<div class="page-header">
  <h3>Sent Gift: <%= @sent_gift.content %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Date</dt>
      <dd><%= @sent_gift.date.strftime('%b %e, %Y') %></dd>

      <dt>Content</dt>
      <dd><%= @sent_gift.content %></dd>
      
      <dt>Sent to</dt>
      <dd>
        <% @sent_gift.persons.each do |person| %>
        <%= person.name %>
        <% end %>
      </dd>

      <dt>Sent as</dt>
      <dd><%= @sent_gift.purpose %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @sent_gift.image_url %>" width="300"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/sent_gifts" class="btn btn-primary">
        Back
      </a>
      <a href="/sent_gifts/<%= @sent_gift.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_sent_gift/<%= @sent_gift.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
